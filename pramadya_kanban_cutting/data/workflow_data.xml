<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <!-- OCR Kanban Potong -->
        <record id="documents_kanban_potong_folder" model="documents.folder" forcecreate="0">
            <field name="name">Kanban Potong</field>
            <field name="description" type="html">
                <center>
                    <p>Automate your Kanban Potong using scanned documents or emails sent to <span class="o_folder_description_alias"><strong>inbox-financial</strong> email alias</span>.</p>
                </center>
            </field>
            <field name="sequence">200</field>
        </record>
        <record id="documents_scanned_kanban_potong_folder" model="documents.folder" forcecreate="0">
            <field name="name">Scanned Kanban Potong</field>
            <field name="description" type="html">
                <center>
                    <p>Scanned Kanban Potong using scanned documents or emails sent to <span class="o_folder_description_alias"><strong>inbox-financial</strong> email alias</span>.</p>
                </center>
            </field>
            <field name="sequence">201</field>
        </record>
        <record id="documents_kanban_potong_rule" model="documents.workflow.rule" forcecreate="0">
            <field name="sequence">200</field>
            <field name="name">OCR Kanban Potong</field>
            <field name="create_model">content.card</field>
            <field name="domain_folder_id" ref="documents_kanban_potong_folder"/>
            <field name="folder_id" ref="documents_scanned_kanban_potong_folder"/>
        </record>



    </data>
</odoo>