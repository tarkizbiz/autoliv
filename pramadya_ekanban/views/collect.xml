<odoo>
    <!-- views list collecting -->

    <record model="ir.ui.view" id="view_collecting_list">
      <field name="name">collecting.list</field>
      <field name="model">collecting</field>
      <field name="arch" type="xml">
        <tree>
          <field name="product_id"/>
          <field name="qty"/>
          <field name="state" optional="show" readonly="1" decoration-info="state == 'draft'" decoration-success="state in 'done'" widget="badge"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="view_heijunka_list">
      <field name="name">heijunka.list</field>
      <field name="model">heijunka</field>
      <field name="arch" type="xml">
        <tree>
          <field name="product_id"/>
          <field name="collect_id"/>
          <field name="date"/>
          <field name="schedule_date"/>
          <field name="qty_kanban"/>
          <field name="qty"/>
          <field name="state" optional="show" readonly="1" decoration-info="state == 'draft'" decoration-success="state in 'done'" widget="badge"/>
        </tree>
      </field>
    </record>

    <!-- views form collecting -->

    <record model="ir.ui.view" id="view_collecting_form">
        <field name="name">collecting.form</field>
        <field name="model">collecting</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="draft,ready,done"/>
                </header>
                <sheet>
                    <group>
                        <field name="product_id"/>
                        <field name="line_id" />
                        <field name="qty"/>
                        <field name="start_date"/>
                        <field name="end_date"/>
                    </group>
                    <notebook>
                    <page name="collecting_lines" string="Collecting Lines">
                        <field name="collecting_lines" nolabel="1">
                            <tree editable="bottom">
                                <field name="delivery_note"/>
                                <field name="picking_date" />
                                <field name="qty" />
                                <field name="qty_kanban" />
                            </tree>
                        </field>
                    </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- views form heijunka -->

    <record model="ir.ui.view" id="view_heijunka_form">
        <field name="name">heijunka.form</field>
        <field name="model">heijunka</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="draft,done"/>
                </header>
                <sheet>
                    <group>
                        <field name="product_id"/>
                        <field name="qty_kanban"/>
                        <field name="qty"/>
                        <field name="date"/>
                        <field name="schedule_date"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- views Kanban collecting -->

    <record model="ir.ui.view" id="view_collecting_kanban">
        <field name="name">collecting.kanban</field>
        <field name="model">collecting</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" default_group_by="line_id" group_create="false" sample="1">
                <field name="line_id" />
                <field name="product_id"/>
                <field name="aid_partnumber" string="AID P/N" optional="show"/>
                <field name="default_code" optional="show"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="qty"/>
                <field name="state"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content flex-grow-1">
                                <div class="oe_kanban_details">
                                    <strong class="o_kanban_record_title"><field name="default_code"/></strong>
                                    <div>
                                    <field name="aid_partnumber" string="AID P/N"/>
                                    </div>
                                    <div>
                                        <span>
                                                Start Collecting: <field name="start_date"/>
                                        </span>
                                    </div>
                                    <div>
                                        <span>
                                                End Collecting: <field name="end_date"/>
                                        </span>
                                    </div>
                                    <div>
                                        <div class="o_kanban_record_title">
                                        <span>
                                            Quantity: <field name="qty"/>
                                        </span>
                                        </div>
                                    </div>
                                </div>
                                <div class="o_kanban_record_bottom">
                                        <div class="oe_kanban_bottom_left">
                                            
                                        </div>
                                        <div class="oe_kanban_bottom_right">
                                            <strong>
                                                <field name="state" widget="label_selection" options="{'classes': {'planning': 'default','scheduled': 'warning', 'confirmed': 'warning', 'completed': 'success'}}"/>
                                            </strong>
                                        </div>
                                    </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
            </field>
    </record>

    <!-- actions collecting -->

    <record model="ir.actions.act_window" id="pramadya_ekanban.action_window_collecting">
      <field name="name">E-collecting System</field>
      <field name="res_model">collecting</field>
      <field name="view_mode">kanban,tree,form</field>
    </record>

    <record model="ir.actions.act_window" id="pramadya_ekanban.action_window_heijunka">
      <field name="name">E-heijunka System</field>
      <field name="res_model">heijunka</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- actions menu collecting -->

    <menuitem name="E-Collecting" id="pramadya_ekanban.menu_collecting" parent="pramadya_ekanban.menu_root"
              action="pramadya_ekanban.action_window_collecting" sequence="3"/>
    <menuitem name="E-heijunka" id="pramadya_ekanban.menu_heijunka" parent="pramadya_ekanban.menu_master_data"
              action="pramadya_ekanban.action_window_heijunka" sequence="3"/>

</odoo>