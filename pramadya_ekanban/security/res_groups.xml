<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data noupdate="0">
    <!-- CATEGORY -->
    <record id="module_ekanban" model="ir.module.category">
		<field name="name">AID E-Kanban</field>
        <field name="description">Helps you manage E-Kanban System.</field>
        <field name="sequence">180</field>
    </record>
    <record id="category_lot" model="ir.module.category">
		<field name="name">E-Lot</field>
        <field name="description">Category About E-Lot</field>
        <field name="parent_id" ref="module_ekanban"/>
        <field name="sequence">1</field>
    </record>
    <record id="category_rail" model="ir.module.category">
		<field name="name">E-Rail</field>
        <field name="description">Category About E-Rail</field>
        <field name="parent_id" ref="module_ekanban"/>
        <field name="sequence">2</field>
    </record>

    <!-- GROUP ACCESS -->

    <record id="group_ekanban_admin" model="res.groups">
		<field name="name">Admin E-kanban</field>
		<field name="category_id" ref="pramadya_ekanban.module_ekanban"/>
	</record>
    
    <record id="group_elot_view" model="res.groups">
		<field name="name">E-LOT: View Only </field>
		<field name="category_id" ref="category_lot"/>
	</record>
    <record id="group_elot_view_edit" model="res.groups">
		<field name="name">E-LOT: View, &amp; Edit</field>
		<field name="implied_ids" eval="[(4, ref('group_elot_view'))]"/>
		<field name="category_id" ref="category_lot"/>
	</record>
    <record id="group_elot_view_edit_creates" model="res.groups">
		<field name="name">E-LOT: Create, View, &amp; Edit</field>
		<field name="implied_ids" eval="[(4, ref('group_elot_view_edit'))]"/>
		<field name="category_id" ref="category_lot"/>
	</record>
	<record id="group_elot" model="res.groups">
		<field name="name">E-LOT: Full Access</field>
		<field name="implied_ids" eval="[(4, ref('group_elot_view_edit_creates'))]"/>
		<field name="category_id" ref="category_lot"/>
	</record>

    <record id="group_erail_view" model="res.groups">
		<field name="name">E-Rail: View Only </field>
		<field name="category_id" ref="category_rail"/>
	</record>
    <record id="group_erail_view_edit" model="res.groups">
		<field name="name">E-Rail: View, &amp; Edit</field>
		<field name="implied_ids" eval="[(4, ref('group_erail_view'))]"/>
		<field name="category_id" ref="category_rail"/>
	</record>
    <record id="group_erail_view_edit_creates" model="res.groups">
		<field name="name">E-Rail: Create, View, &amp; Edit</field>
		<field name="implied_ids" eval="[(4, ref('group_erail_view_edit'))]"/>
		<field name="category_id" ref="category_rail"/>
	</record>
	
	<record id="group_erail" model="res.groups">
		<field name="name">E-Rail: Full Access</field>
		<field name="implied_ids" eval="[(4, ref('group_erail_view_edit_creates'))]"/>
		<field name="category_id" ref="category_rail"/>
	</record>
    </data>
</odoo>
